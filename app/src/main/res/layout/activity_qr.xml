<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".qr.QRActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            style="@style/QRActivtyStyle"
            android:text="@string/qr_activity_display_title"/>

        <TextView
            android:id="@+id/name_qr_field"
            style="@style/QRActivtyStyle"/>

        <TextView
            android:id="@+id/email_qr_field"
            style="@style/QRActivtyStyle" />
        <TextView
            android:id="@+id/phone_qr_field"
            style="@style/QRActivtyStyle"/>
        <TextView
            android:id="@+id/address_qr_field"
            style="@style/QRActivtyStyle"/>
        <TextView
            android:id="@+id/company_qr_field"
            style="@style/QRActivtyStyle"/>
        <TextView
            android:id="@+id/website_qr_field"
            style="@style/QRActivtyStyle"/>
        <TextView
            android:id="@+id/note_qr_field"
            style="@style/QRActivtyStyle"/>
        <Button
            android:id="@+id/editUserSettings"
            android:text="@string/edit_contact_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>


</ScrollView>