<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app2="https://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ben.emailhelper.ContactFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/addContactButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:text="+"
            android:textSize="20sp"/>

        <!--
            This layout is just here to make the EditText field
            not focus as soon as the fragment is loaded in
         -->

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>

        <EditText
            android:id="@+id/addContactField"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:nextFocusUp="@+id/addContactField"
            android:nextFocusLeft="@+id/addContactField"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_contact_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:scrollbars="vertical"
            app2:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </RelativeLayout>

</FrameLayout>
